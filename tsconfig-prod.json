{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": false
  }
}
