{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ES2022",
    "target": "ES2022",
    "sourceRoot": "./src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["./**/*.ts"]
}
